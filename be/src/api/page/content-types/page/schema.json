{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "path": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^([/][^/]*)+$"
    },
    "copy": {
      "type": "richtext",
      "default": "# Write Me!",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
